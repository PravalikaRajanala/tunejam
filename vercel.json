{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/",
      "dest": "app.py",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "functions": {
    "app.py": {
      "maxDuration": 300
    }
  },
  "build": {
    "env": {
      "FLASK_SECRET_KEY": "@flask_secret_key",
      "FIREBASE_ADMIN_CREDENTIALS_JSON": "@firebase_admin_credentials_json"
    }
  }
}
