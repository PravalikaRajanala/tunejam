{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "functions": {
    "app.py": {
      "maxDuration": 90 // Set to 300 seconds (5 minutes) or your desired maximum
    }
  },
  "build": {
    "env": {
      "FLASK_SECRET_KEY": "@flask_secret_key",
      "FIREBASE_ADMIN_CREDENTIALS_JSON": "@firebase_admin_credentials_json"
    }
  }
}
