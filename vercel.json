{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python@3.0.0"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/",
      "dest": "api/app.py",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/(.*)",
      "dest": "api/app.py"
    }
  ],
  "functions": {
    "api/app.py": {
      "maxDuration": 300
      // Runtime is now specified in the 'builds' section, not here
    }
  },
  "env": {
    "FLASK_SECRET_KEY": "FLASK_SECRET_KEY",
    "FIREBASE_ADMIN_CREDENTIALS_JSON": "FIREBASE_ADMIN_CREDENTIALS_JSON"
  }
}
